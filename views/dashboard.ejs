<script src="/js/script.js"></script>

<body>
    <% include includes/nav.ejs %> <br>
    <div class="container-fluid">
        <div class="row text-center">
            <div class="col-md-12">
                <a href="/dashboard/addCustomer" role="button" class="btn btn-success">Add Customer</a>
                <!-- <a href="/dashboard/getInvoices" role="button" class="btn btn-success">Export As Excel </a> -->
            </div>
        </div>
    </div>
    <h1 class="text-center">
        Create invoice</h1>
    <hr>
    <div class="container">
        <form action="/dashboard/invoice" method="post">
            <%= message %>
            <div class="form-group">
                <label for="customer">Customer</label>
                <select name="customer" class="form-control">
                    <% for(var i=0; i< customers.length; i++) {%>
                    <option value="<%= customers[i].name %> " selected><%= customers[i].name %></option>
                    <% } %>
                </select>
            </div>
            <div class="row">
                <div class="col-md-6">


                    <div class="form-group" id="items">
                        <label for="customer"></label>
                        <input type="text" name="item" id="item1" placeholder="Enter Name for Item 1" required
                            class="form-control mb-3">
                        <input type="text" name="item" id="2" placeholder="Enter Name for Item 2"
                            class="form-control mb-3">

                    </div>
                    <div id="item"></div><br>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="quantity"></label>
                        <div class="row">
                            <div class="col-md-6" id="quantity">
                                <input type="number" id="quantity1" name="quantity" class="form-control" min="0" step="1"
                                    max="100" placeholder="Enter Quantity" required>
                                <input type="number" id="2" name="quantity" class="form-control mt-3" min="0" step="1"
                                    max="100" placeholder="Enter Quantity">
                                <div id="quantity"></div>
                            </div>
                            <div class="col-md-6" id="rate">
                                <input type="number" id="rate1" name="rate" class="form-control" min="0" step="1"
                                    placeholder="Enter Rate" required>
                                <input type="number" id="2" name="rate" class="form-control mt-3" min="0" step="1"
                                    placeholder="Enter Rate">
                                <div id="rate"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-success">
                <a href="/users/logout" class="btn btn-primary">Logout</a>
            </div>
            <input type="button" onclick="addItem()" value="Add Item" class="btn btn-success"></input>
            <input type="button" onclick="deleteItem()" value="Delete Item" class="btn btn-success"> </input>
        </form><br>
    </div>
</body>